<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
<tbody>
  <% @books.each do |list| %>
  <tr>
    <td><%= list.title %></td>
    <td><%= list.body %></td>
    <td>
      <%= link_to "show" %>  
    </td>
    <td>
      <%= link_to "edit" %>
    </td>
    <td>
      <%= link_to "Destroy." %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
<h2>New book</h2>
<%= form_with model:Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>